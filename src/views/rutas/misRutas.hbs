    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ nombre }} <a href="/rutas/editarRutas/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <!-- 
